{
    "configurations": [

        {
            "name": "(gdb) Core dump",
            "type": "cppdbg",
            "request": "launch",
            "program": "${input:selectProgram}",
            "coreDumpPath": "${input:coreDumpFileName}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "(gdb) Launch serverAsync",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/serverAsync",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch prog",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/prog",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "selectProgram",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile", 
            
            "args": {
                "description": "Pick a program file",
                "include": "*",
                "fromFolder": {
                    "predefined": ["${workspaceFolder}/build"]
                }
            } 
        }, 
        {
            "id": "coreDumpFileName",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile", 
            "args": {
                "description": "Pick a core dump file", 
                "fromFolder": {
                    "predefined": ["/var/crash"]
                }
            } 
        }
    ],
    "version": "2.0.0"
}